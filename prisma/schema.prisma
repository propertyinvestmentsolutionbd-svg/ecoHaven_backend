generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  name               String
  email              String    @unique
  password           String
  role               Roles?    @default(employee)
  contactNo          String
  profileImg         String?
  address            String?
  country            String?   @default("")
  designation        String?   @default("")
  linkedinUrl        String?   @unique
  isActive           Boolean   @default(true)
  isFeatured         Boolean   @default(false)
  profileDescription String?
  isAgent            Boolean   @default(false)
  agentDescription   String?
  twofaEnabled       Boolean   @default(false)
  twoFactorCode      String?
  twoFactorExpires   DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  menuPermissions UserMenuPermission[]

  @@map("users")
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  path        String? // e.g. '/dashboard/projects'
  icon        String? // optional icon reference
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  permissions UserMenuPermission[]
}

model UserMenuPermission {
  id        Int      @id @default(autoincrement())
  userId    String
  menuId    Int
  canView   Boolean  @default(true)
  canEdit   Boolean  @default(false)
  canDelete Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id])
  menu Menu @relation(fields: [menuId], references: [id])

  @@unique([userId, menuId])
}

model Project {
  id                 Int           @id @default(autoincrement())
  name               String
  mapUrl             String?       @unique
  location           String?
  priceRange         String?
  sizeSqft           Int?
  landArea           String?
  status             ProjectStatus
  description        String?
  amenities          String[] // TEXT[]
  projectType        String?
  progressPercentage Int?          @default(0)
  completionYear     Int?
  brochureUrl        String?
  virtualTourUrl     String?
  latitude           Float?
  longitude          Float?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Removed createdBy / creator
  images       ProjectImage[]
  // inquiries    Inquiry[]
  galleryItems Gallery[]
}

model ProjectImage {
  id         Int     @id @default(autoincrement())
  imageUrl   String?
  caption    String?
  isFeatured Boolean @default(false)
  projectId  Int
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Gallery {
  id        Int      @id @default(autoincrement())
  title     String?
  category  String?
  imageUrl  String?
  videoUrl  String?
  createdAt DateTime @default(now())

  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  email     String   @db.VarChar(50)
  phone     String?  @db.VarChar(50)
  message   String   @db.Text // can store richtext HTML safely
  createdAt DateTime @default(now())
  read      Boolean  @default(false) // for admin dashboard tracking
  replied   Boolean  @default(false) // mark if admin responded
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  type        String?
  tag         String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blogs")
}

model Newsletter {
  id             Int       @id @default(autoincrement())
  email          String    @unique @db.VarChar(150)
  subscribed     Boolean   @default(true) // unsubscribe support
  createdAt      DateTime  @default(now())
  unsubscribedAt DateTime?
}

model Career {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?  @db.Text
  type         String // full-time, part-time, contract, internship, freelance
  deadline     DateTime
  redirectLink String?
  status       String   @default("active") // active, expired
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("careers")
}

enum Roles {
  admin
  employee
}

enum ProjectStatus {
  Ongoing
  Completed
  Upcoming
}
